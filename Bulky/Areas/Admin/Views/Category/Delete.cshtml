@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border-3 p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Name">Category Name</label>
            <input asp-for="Name" type="text" disabled class="form-control" />
           
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder">Display Order</label>
            <input asp-for="DisplayOrder" type="text" disabled class="form-control" />
          
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button class="btn btn-danger form-control" type="submit">Delete </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Go Back</a>
            </div>
        </div>

    </div>
</form>


